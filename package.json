{
    "$schema": "https://json.schemastore.org/package",
    "name": "import-linker",
    "displayName": "Linker - Auto Import Updater",
    "description": "Automatically updates import statements when you rename or move files and folders. Supports JavaScript, TypeScript, React, and more.",
    "version": "1.0.0",
    "publisher": "linkerdev",
    "icon": "images/Linker.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/soumen0818/Linker"
    },
    "bugs": {
        "url": "https://github.com/soumen0818/Linker/issues"
    },
    "homepage": "https://github.com/soumen0818/Linker#readme",
    "license": "MIT",
    "keywords": [
        "import",
        "refactor",
        "rename",
        "move",
        "auto-import",
        "javascript",
        "typescript",
        "react",
        "es6",
        "modules",
        "imports",
        "productivity"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Linker",
            "properties": {
                "linker.autoStageChanges": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically stage files modified by Linker in Git"
                },
                "linker.exclude": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        "**/.git/**"
                    ],
                    "description": "Glob patterns to exclude from scanning"
                },
                "linker.fileExtensions": {
                    "type": "array",
                    "default": [
                        "js",
                        "ts",
                        "jsx",
                        "tsx"
                    ],
                    "description": "File extensions to scan for imports"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "pretest": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.75.0",
        "typescript": "^5.0.0",
        "@vscode/test-electron": "^2.3.0"
    }
}